name=util-linux
version=2.36
source=(https://mirrors.edge.kernel.org/pub/linux/utils/util-linux/v2.36/util-linux-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/tools                \
            --without-python               \
            --disable-makeinstall-chown    \
            --without-systemdsystemunitdir \
            --without-ncurses              \
            PKG_CONFIG=""

	make
	make install
}
